@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h2>Add an Ingredient</h2>

<h4>Add an ingredient to this recipe: @Html.DisplayFor(model => model.Name)</h4>
<div class="w-50">
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.RecipeId)
    <div class="form-group">
        @Html.Label("Select ingredient")
        @Html.DropDownList("IngredientId", ViewBag.IngredientId, "Select Ingredient", new { @class = "form-control"})
    </div>
    <div>
      @Html.Label("Quantity")
      @Html.TextBox("Quantity", "", new { @class="form-control"})
    </div>
    
    <input type="submit" value="Save" class="btn btn-info btn-sm m-3"/>
  }
</div>
<p>@Html.ActionLink("Back to list", "Index")</p>



