@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h2>Add an Ingredient</h2>
<!-- <h2>@Model.JoinIngredientRecipes.Count()</h2> -->

<h4>Add an ingredient to this recipe: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.RecipeId)

  @Html.LabelFor(model => model.JoinIngredientRecipes.ElementAt(0).Quantity)
  @Html.TextBoxFor(model => model.JoinIngredientRecipes.ElementAt(0).Quantity)
  

  
  
  @Html.Label("Select ingredient")
  @Html.DropDownList("IngredientId")
  
  <input type="submit" value="Save" />

}

<p>@Html.ActionLink("Back to list", "Index")</p>