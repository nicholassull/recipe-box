@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
@model IEnumerable<RecipeBox.Models.Recipe>;
<div class="progress">
  <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"></div>
</div>
<h1>@User.Identity.Name's Recipes</h1>

@if (@Model.Any())
{
  <ul class="list-group">
    @foreach (Recipe recipe in Model)
    {
      <li class="list-group-item d-flex justify-content-between align-items-center">@Html.ActionLink($"{recipe.Name}", "Details", new { id = recipe.RecipeId }) 
      <span class="badge bg-primary rounded-pill"> @recipe.Rating </span>
      </li>
    }
  </ul>
}
else
{
  <div class="text-center">
    <h3>No recipes have been added yet!</h3>
    <p>Click below to create one.</p>
  </div>
}
<br>
@Html.ActionLink("Add Recipe", "Create", new { }, new { @class = "btn btn-primary"})
@Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "btn btn-primary"})
