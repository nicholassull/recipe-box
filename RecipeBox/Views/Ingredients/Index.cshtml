@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
@model IEnumerable<RecipeBox.Models.Ingredient>;

<h1>Ingredients</h1>

@if (@Model.Any())
{
  <ul class="list-group">
    @foreach (Ingredient ingredient in Model)
    {
      <li class="list-group-item d-flex justify-content-between align-items-center">@Html.ActionLink($"{ingredient.Name}", "Details", new { id = ingredient.IngredientId })
      <span class="badge bg-primary rounded-pill">@ingredient.JoinEntities.Count()</span>
      </li>
    }
  </ul>
}
else
{
  <div class="text-center">
    <h3>No Ingreients have been added yet!</h3>
    <p>Click below to create one.</p>
  </div>
}
<br>

<!-- @* @ViewBag.SuccessMessage = ""; *@ -->

@Html.ActionLink("Add Ingredient", "Create", new { }, new { @class = "btn btn-primary"})
@Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "btn btn-primary"})
