@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Ingredient

<h4>Add a new ingredient</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.Label("Select Recipe")
  @Html.DropDownList("RecipeId", "Add to Recipe")

  <input type="submit" value="Add new ingredient" class="btn btn-info" />
}
<p>@Html.ActionLink("Show all ingredients", "Index")</p>